<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_purple_background_animation"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ComSol"
        android:textColor="@color/white_color"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/llform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project"
            android:textColor="@color/white_color"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawable_edit_text"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:textCursorDrawable="@null"
            android:textSize="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Site"
            android:textColor="@color/white_color"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawable_edit_text"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:textCursorDrawable="@null"
            android:textSize="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Operator"
            android:textColor="@color/white_color"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawable_edit_text"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:textCursorDrawable="@null"
            android:textSize="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Subcon"
            android:textColor="@color/white_color"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/subcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawable_edit_text"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:textCursorDrawable="@null"
            android:textSize="12dp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/llDataSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26000000"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvLat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude_label"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tvlong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude_label"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#26000000"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tvSite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Site"
                    android:textColor="@color/white_color"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tvOperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operator"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tvSubcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SubCon"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tvDateAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Time"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tvRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"
                    />


            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


    <Button
        android:id="@+id/openCameraBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/drawable_edit_text"
        android:gravity="center"
        android:text="Capture Picture"
        android:textColor="@color/white_color"
        android:visibility="visible"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered By ComSol"
        android:textStyle="italic"
        android:textColor="@color/white_color"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"/>
</LinearLayout>